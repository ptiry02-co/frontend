{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "standard"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "space-before-function-paren": "off",
    "one-var": "off",
    "react/prop-types": 0,
    "react/react-in-jsx-scope": 0,
    "multiline-ternary": "off",
    "no-unneeded-ternary": "off",
    "react-hooks/exhaustive-deps": 0,
    "no-unused-vars": "warn",
    "indent": "off",
    "no-constant-condition": "off"
  }
}
